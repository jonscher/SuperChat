<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/content"
    android:layout_gravity="center">

    <Button
        android:id="@+id/button_follower"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Follower"
        android:onClick="button_follower"
        />

    <Button
        android:layout_centerHorizontal="true"
        android:id="@+id/button_following"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Following"
        android:onClick="button_following"
        android:layout_toRightOf="@id/button_follower"
    />

    <ListView android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/button_following"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        tools:listitem="@layout/tweet_item"/>

</RelativeLayout>